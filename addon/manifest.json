{
  "manifest_version": 2,
  "version": "2.1",
  "name": "srch",
  "description": "Searches the selected text using pre-defined search engines.",
  "icons": {
    "16": "./icons/srch-16.png",
    "32": "icons/srch-32.png",
    "48": "icons/srch-48.png",
    "128": "icons/srch-128.png"
  },
  "permissions": ["tabs", "activeTab", "contextMenus"],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "commands": {
    "search-chatgpt": {
      "description": "ChatGPT Search"
    },
    "search-duckduckgo": {
      "description": "DuckDuckgo Search"
    },
    "search-google": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Google Search"
    },
    "search-github": {
      "description": "GitHub Search"
    },
    "search-googleimages": {
      "suggested_key": {
        "default": "Alt+I"
      },
      "description": "Google Images Search"
    },
    "search-letterboxd": {
      "description": "Letterboxd Search"
    },
    "search-oxford": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "Oxford Dictionary Search"
    },
    "search-reddit": {
      "description": "Reddit Search"
    },
    "search-spotify": {
      "description": "Spotify Search"
    },
    "search-wikipedia": {
      "description": "Wikipedia Search"
    },
    "search-youtube": {
      "suggested_key": {
        "default": "Alt+Y"
      },
      "description": "YouTube Search"
    }
  }
}
