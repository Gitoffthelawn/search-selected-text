{
  "manifest_version": 2,
  "name": "Search Selected Text",
  "version": "2.0",
  "description": "Searches the selected text using pre-defined search engines.",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": ["tabs", "activeTab", "contextMenus"],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "commands": {
    "search-amazon": {
      "description": "Search on Amazon"
    },
    "search-chatgpt": {
      "suggested_key": {
        "default": "Alt+I"
      },
      "description": "Search on ChatGPT"
    },
    "search-duckduckgo": {
      "description": "Search on DuckDuckgo"
    },
    "search-google": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Search on Google"
    },
    "search-github": {
      "description": "Search on GitHub"
    },
    "search-googleimages": {
      "description": "Search on Google Images"
    },
    "search-letterboxd": {
      "description": "Search on Letterboxd"
    },
    "search-oxford": {
      "suggested_key": {
        "default": "Alt+O"
      },
      "description": "Search on Oxford Dictionary"
    },
    "search-protonmail": {
      "description": "Search on ProtonMail"
    },
    "search-reddit": {
      "description": "Search on Reddit"
    },
    "search-spotify": {
      "description": "Search on Spotify"
    },
    "search-youtube": {
      "suggested_key": {
        "default": "Alt+Y"
      },
      "description": "Search on YouTube"
    }
  }
}
