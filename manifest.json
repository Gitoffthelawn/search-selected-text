{
  "manifest_version": 2,
  "name": "srch",
  "version": "3.1.0",
  "description": "Search selected text",
  "icons": {
    "16": "icons/srch-16.png",
    "32": "icons/srch-32.png",
    "64": "icons/srch-64.png",
    "128": "icons/srch-128.png"
  },
  "permissions": ["tabs", "activeTab", "storage", "contextMenus"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "srch"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "commands": {
    "invoke-chord": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Leader keybind for search"
    },
    "search-default": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Search with default engine"
    }
  }
}
